{
    "text": {
        "prefix": "jjtxt",
        "body": "{{ $1 }}",
        "description": "text"
    },
    "if": {
        "prefix": "jjif",
        "body": "{% if $1 %}\n$2\n{% endif %}",
        "description": "if statement"
    },
    "ifelse": {
        "prefix": "jjife",
        "body": "{% if $1 %}\n$2\n{% else %}\n$3\n{% endif %}",
        "description": "if else statement"
    },
    "for": {
        "prefix": "jjfor",
        "body": "{% for $1 in $2 %}\n$3\n{% endfor %}",
        "description": "for loop"
    },
    "block": {
        "prefix": "jjblock",
        "body": "{% block $1 %}\n$2\n{% endblock %}",
        "description": "block"
    },
    "comment": {
        "prefix": "jjcomment",
        "body": "{# $1 #}",
        "description": "comment"
    },
    "set": {
        "prefix": "jjset",
        "body": "{% set $1 = $2 %}",
        "description": "set"
    },
    "filter": {
        "prefix": "jjfilter",
        "body": "{{ $1 | $2 }}",
        "description": "filter"
    }
}
